-  volatile int ref_count;
+  int ref_count;  /* atomic */
 
   ThreadClosure *thread_closure;
   GPtrArray *mirrorlist; /* list of base URIs */
diff --git a/src/libostree/ostree-remote-private.h b/src/libostree/ostree-remote-private.h
