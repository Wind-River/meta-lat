image_type:
- ostree-repo
- ustart
packages:
- startup-container
- docker
rootfs-post-scripts:
- echo "contains-container-base load=/var/docker-images/container-base-@MACHINE@.docker-image.tar.bz2 image=container-base-@MACHINE@"  >> $IMAGE_ROOTFS/etc/sysdef/run_on_upgrade.d/containers.dat
system:
- run_on_upgrade:
  - exampleyamls/sysdef/run_on_upgrade.d/10_update_containers.sh
- run_always:
  - exampleyamls/sysdef/run_always.d/10_start_containers.sh
- contains:
  - exampleyamls/container-base-@MACHINE@.yaml
- files:
  - file:
      src: sub_deploy/deploy/container-base-@MACHINE@.docker-image.tar.bz2
      dst: /var/docker-images/

