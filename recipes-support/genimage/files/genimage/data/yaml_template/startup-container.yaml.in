image_type:
- ustart
packages:
- startup-container
- docker
rootfs-post-scripts:
- echo "@IMAGE_NAME@ load=/var/docker-images/@IMAGE_NAME@.docker-image.tar.bz2 run-cmd=/bin/sh" >> $IMAGE_ROOTFS/etc/sysdef/run_on_upgrade.d/containers.dat
system:
- run_on_upgrade:
  - exampleyamls/sysdef/run_on_upgrade.d/10_update_containers.sh
- run_always:
  - exampleyamls/sysdef/run_always.d/10_start_containers.sh
- files:
  - file:
      src: deploy/@IMAGE_NAME@.docker-image.tar.bz2
      dst: /var/docker-images/
      mode: 644
